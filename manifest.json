{
  "manifest_version": 3,
  "name": "SGA AI Feedback",
  "version": "1.0.0",
  "description": "Give feedback to SGA AI assistant with relative and absolute feedback options",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SGA AI Feedback"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}
