{
  "manifest_version": 3,
  "name": "SGA AI Assistant",
  "version": "1.0.0",
  "description": "Make it easy with Malcolm - approve reports, provide feedback, and manage AI rules directly from Google Docs",
  "homepage_url": "https://www.sgaconsulting.co.uk",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SGA AI Assistant"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}
